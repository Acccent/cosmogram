    "build:css": "postcss src/static/init.css -o _site/static/css/style.css",
    "debug": "set DEBUG=* & eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "autoprefixer": "^10.2.6",
    "colorguard": "^1.2.1",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.11",
    "html-minifier": "^4.0.0",
    "luxon": "^1.27.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.4",
    "postcss-cli": "^8.3.1",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-selectors": "^6.0.0",
    "postcss-each": "^1.0.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-mixins": "^8.1.0",
    "postcss-nested": "^5.0.5",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
