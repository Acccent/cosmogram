{
  "scripts": {
    "clean": "rimraf _site",
    "serve": "npm-run-all clean -p serve:*",
    "serve:eleventy": "eleventy --serve",
    "serve:css": "postcss src/build/css/init.css -o _site/style.css -w",
    "serve:admincss": "postcss src/build/css/admin.css -o _site/admin/style.css -w",
    "build": "cross-env NODE_ENV=production run-s clean build:*",
    "build:eleventy": "eleventy",
    "build:css": "postcss src/build/css/init.css -o _site/style.css",
    "build:admincss": "postcss src/build/css/admin.css -o _site/admin/style.css",
    "debug": "set DEBUG=* & eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "autoprefixer": "^10.2.6",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.11",
    "eleventy-load": "^0.2.0",
    "eleventy-load-file": "^0.1.0",
    "eleventy-load-html": "^0.1.0",
    "eleventy-load-js": "^0.1.0",
    "eleventy-plugin-embed-everything": "^1.13.2",
    "eleventy-plugin-heroicons": "^0.2.0",
    "eleventy-plugin-metagen": "^1.3.1",
    "eleventy-plugin-reading-time": "^0.0.1",
    "eleventy-plugin-responsive-images": "^0.0.5",
    "html-minifier": "^4.0.0",
    "js-yaml": "^4.1.0",
    "luxon": "^1.27.0",
    "markdown-it": "^12.0.6",
    "markdown-it-anchor": "^8.0.3",
    "markdown-it-replacements": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-selectors": "^6.0.0",
    "postcss-each": "^1.0.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-mixins": "^8.1.0",
    "postcss-nested": "^5.0.5",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "hiq": "^4.1.9",
    "overlayscrollbars": "^1.13.1"
  }
}
